{
  "name": "owasp-i18n",
  "description": "OWASP library with I18n support.",
  "version": "0.0.1",
  "author": "Joost Lubach",
  "license": "MIT",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "scripts": {
    "build": "pnpm build:tsc && pnpm build:copy",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css dist",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },

  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}